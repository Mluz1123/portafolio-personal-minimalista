---
import Section from "../Section.astro";
import { work } from "../../cv.json"
---
<Section title="Experiencia laboral">
    <ul>
        {
            work.map(
                ({name, startDate, endDate, position, summary, technologies}) => {
                    const startYear = new Date(startDate).getFullYear()
                    const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual"
                    const year = `${startYear} - ${endYear}`
                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{position}</h3>
                                        <h4>{name}</h4>
                                    </div>

                                    <time>{year}</time>
                                </header>
                                <footer>
                                    <p>{summary}</p>    
                                </footer>
                                <footer>
                                    <p><span>Tecnolog√≠as : </span>{technologies}</p>    
                                </footer>
                            </article>
                        </li>
                    )
                }
            )
        }
    </ul>
    
</Section>

<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    article h3 {
        font-weight: 500;
        color: #111;
    }
    article h4 {
        color: #222;
        font-weight: 400;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }
    time {
        color: #555;
        font-size: 0.85rem;
    }
    footer p span{
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        color: #000000;
        font-weight: 500;
    }
</style>